<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuestionsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="28.87"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_mundet"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/mundet" />

            <ImageView
                android:id="@+id/blanco"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:paddingLeft="150dp"
                android:src="@drawable/blanco" />

            <ImageView
                android:id="@+id/logo_cvc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="150dp"
                android:src="@drawable/cvclogo" />

        </LinearLayout>

          <TextView
            android:id="@+id/textView1"
            style="@style/style_text"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#11276e"
            android:textSize="55dp"
            android:textStyle="bold|italic"
            android:typeface="sans" /> 

     
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="500dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="20dp"
            android:src="@drawable/lll" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_weight="0.23"
        android:orientation="vertical" >


        <Button
            android:id="@+id/button_start"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/red_button"
            android:padding="20dp"
            android:text="@string/start_game" />

    </LinearLayout>

</LinearLayout>